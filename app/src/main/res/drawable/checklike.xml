<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use red heart -->
    <item android:drawable="@drawable/btn_like"
        android:state_checked="true" />
    <!-- When not selected, use empty heart-->
    <item android:drawable="@drawable/btn_not_like"
        android:state_checked="false"/>
</selector>