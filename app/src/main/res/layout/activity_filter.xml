<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_bright">


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/filter_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/bright"
            android:layout_weight="1"
            />

        <SeekBar
            android:id="@+id/brightness_slider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/contrast" />

        <SeekBar
            android:id="@+id/contrast_slider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:background="#000"
        android:measureWithLargestChild="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/filt_button_original"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.70"
                android:text="@string/applyfilter0"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:onClick="originalImage"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.30"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:textStyle="bold|italic"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:text="Normal"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/filt_button_invert"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.70"
                android:text="@string/apply_filter_invert"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:onClick="selectFilterMatrix"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.30"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:textStyle="bold|italic"
                android:textSize="14sp"
                android:text="Invert"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/filt_button_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.70"
                android:text="@string/apply_filter_2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:onClick="selectFilterMatrix"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.30"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:textStyle="bold|italic"
                android:textSize="14sp"
                android:text="Orange"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/filt_button_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.70"
                android:text="@string/apply_filter_3"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:onClick="selectFilterMatrix"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.30"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:textStyle="bold|italic"
                android:textSize="14sp"
                android:text="Violet"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>