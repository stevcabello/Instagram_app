<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp">

        <ImageView

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_photo"
            android:id="@+id/iv_photo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sugfriendsName"
            android:id="@+id/tv_description"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_photo"
            android:layout_toLeftOf="@+id/iv_btnfollow"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/iv_btnfollow"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_btnhide"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_follow" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:id="@+id/iv_btnhide"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_hide" />


    </RelativeLayout>

    <GridView
        android:id="@+id/gv_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:focusable="true"
        android:clickable="true">

    </GridView>

</LinearLayout>