<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/rly_tile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_text_default_material_dark"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/btn_photo"
            android:id="@+id/iv_tile_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stevcabello"
            android:id="@+id/tv_tile_username"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_tile_photo"
            android:layout_toEndOf="@+id/iv_tile_photo"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 min"
            android:id="@+id/tv_timestamp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/tv_location"
            android:layout_below="@+id/tv_tile_username"
            android:layout_alignLeft="@+id/tv_tile_username"
            android:layout_alignStart="@+id/tv_tile_username"
            android:textColor="@color/blue_facebook" />

    </RelativeLayout>

</FrameLayout>